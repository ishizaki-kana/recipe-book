generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ユーザー
model User {
  id       String @id
  name     String
  password String

  @@map("user")
}

// レシピカテゴリ
model RecipeCategory {
  id    Int    @id @default(autoincrement())
  name  String
  icon  String
  color String

  recipes Recipe[]

  @@map("recipe_category")
}

// レシピ
model Recipe {
  id         Int     @id @default(autoincrement())
  name       String
  categoryId Int     @map("category_id")
  imageUrl   String? @map("image_url")
  shelfLife  String?
  calories   Int?

  ingredients RecipeIngredient[]
  steps       RecipeStep[]

  category RecipeCategory @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  @@map("recipe")
}

// レシピ材料
model RecipeIngredient {
  id       Int     @id @default(autoincrement())
  recipeId Int     @map("recipe_id")
  name     String
  volume   String?
  order    Int?

  recipe Recipe @relation(fields: [recipeId], references: [id], onDelete: Cascade)

  @@map("recipe_ingredient")
}

// レシピ工程
model RecipeStep {
  id         Int    @id @default(autoincrement())
  recipeId   Int    @map("recipe_id")
  stepNumber Int    @map("step_number")
  text       String

  seasonings RecipeSeasoning[]

  recipe Recipe @relation(fields: [recipeId], references: [id], onDelete: Cascade)

  @@unique([recipeId, stepNumber], name: "recipe_step_unique") // ユニーク制約: 同じレシピ内でのステップ番号は一意
  @@map("recipe_step")
}

// レシピ調味料
model RecipeSeasoning {
  id     Int     @id @default(autoincrement())
  stepId Int     @map("step_id")
  name   String
  volume String?
  order  Int?

  step RecipeStep @relation(fields: [stepId], references: [id], onDelete: Cascade)

  @@map("recipe_seasoning")
}

// リストカテゴリー
model ListCategory {
  id    Int    @id @default(autoincrement())
  name  String
  icon  String
  color String

  listItems ListItem[]

  @@map("list_category")
}

// リストアイテム
model ListItem {
  id         Int     @id @default(autoincrement())
  name       String
  volume     String?
  recipeName String?
  categoryId Int     @map("category_id")
  isDone     Boolean @default(false) @map("is_done")

  category ListCategory @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  @@map("list_item")
}
