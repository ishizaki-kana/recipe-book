generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ユーザー
model User {
  id       String @id
  name     String
  password String

  @@map("user")
}

// レシピカテゴリ
model RecipeCategory {
  id    Int    @id @default(autoincrement())
  name  String
  icon  String
  color String

  recipes Recipe[]

  @@map("recipe_category")
}

// レシピ
model Recipe {
  id         Int     @id @default(autoincrement())
  name       String  @default("")
  categoryId Int     @map("category_id")
  imageUrl   String? @map("image_url")

  category RecipeCategory @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  @@map("recipe")
}

// リストカテゴリー
model ListCategory {
  id    Int    @id @default(autoincrement())
  name  String
  icon  String
  color String

  listItems ListItem[]

  @@map("list_category")
}

// リストアイテム
model ListItem {
  id         Int     @id @default(autoincrement())
  name       String
  volume     String?
  recipeName String?
  categoryId Int     @map("category_id")
  isDone     Boolean @default(false) @map("is_done")

  category ListCategory @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  @@map("list_item")
}
